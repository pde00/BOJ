#include <iostream>
using namespace std;

void makeUp(int n) {
	for (int i = 1; i <= n; i++) {
		if (i == 1)continue;
		for (int j = n - i; j >= 0; j--) cout << "*";
		for (int k = 1; k < 2 * i - 1; k++) cout << " ";
		for (int j = n - i; j >= 0; j--) cout << "*";
		cout << '\n';
	}
}

void makeDown(int n) {
	for (int i = 1; i <= n; i++) {
		for (int j = 1; j <= i; j++) cout << "*";
		for (int k = 2 * n - 1; k >  2 * i - 1; k--) cout << " ";		
		for (int j = 1; j <= i; j++) cout << "*";
		cout << '\n';
	}
}

int main() {
	int n;
	cin >> n;
	makeDown(n);
	makeUp(n);
}
